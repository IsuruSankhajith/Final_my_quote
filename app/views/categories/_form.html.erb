<%= form_with(model: category, id: 'category-form') do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_name, style: "display: block" %>
    <%= form.text_field :category_name %>
    <p id="category-name-error" style="color: red; display: none;">Category name cannot be empty.</p>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var form = document.getElementById('category-form');
    var categoryNameInput = form.querySelector('#category_category_name');
    var categoryNameError = form.querySelector('#category-name-error');

    form.addEventListener('submit', function (event) {
      if (categoryNameInput.value.trim() === '') {
        categoryNameError.style.display = 'block';
        event.preventDefault(); // Prevent form submission
      } else {
        categoryNameError.style.display = 'none';
      }
    });
  });
</script>
