
<div class="bg-green-500 text-white p-4">
  <%= notice %>
</div>

<h1 class="text-3xl font-bold mt-4">Manage category</h1>

<div id="categories" class="mt-4">
  <% @categories.each do |category| %>
    <div class="bg-white rounded shadow p-4 mb-4">
      <%= render category %>
      <p>
        <%= link_to "Show this category", category, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New category", new_category_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 mt-4 inline-block" %>

