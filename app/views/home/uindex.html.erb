<div class="container">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <p>Hello <strong><%= session[:fname] %></strong></p>
  <h3 class="mt-4">Standard User Landing Page</h3>
  <p>This is where general messages to the account holder would go</p>

  <%= link_to "Edit your account details", edit_user_path(session[:user_id]), class: 'btn btn-primary' %>
</div>
