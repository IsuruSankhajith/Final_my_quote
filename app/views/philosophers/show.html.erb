<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <%= render @philosopher %>

  <div class="mt-4">
    <%= link_to "Edit this philosopher", edit_philosopher_path(@philosopher), class: "btn btn-primary mr-2" %>

    <%= link_to "Back to philosophers", philosophers_path, class: "btn btn-secondary" %>

    
    <%= button_to "Delete this philosopher", @philosopher, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger ml-2" %>
  </div>
</div>
