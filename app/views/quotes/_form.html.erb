<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% quote.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Quote Title' %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', placeholder: 'Quote Description' %>
  </div>

  <div class="form-group">
    <%= form.label :text, class: 'form-label' %>
    <%= form.text_area :text, class: 'form-control', placeholder: 'Quote Text' %>
  </div>

  <div class="form-group">
    <%= form.label :user_comment, class: 'form-label' %>
    <%= form.text_area :user_comment, class: 'form-control', placeholder: 'User Comment' %>
  </div>

  <div class="form-group">
    <%= form.label :publication_year, class: 'form-label' %>
    <%= form.number_field :publication_year, class: 'form-control', placeholder: 'Publication Year' %>
  </div>

  <div class="form-group">
    <%= form.label :ispublic, class: 'form-check-label' do %>
      Public
      <%= form.check_box :ispublic, class: 'form-check-input' %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit 'Save Quote', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
