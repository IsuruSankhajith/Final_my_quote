
<h3 style="padding-top: 10px;">Search for Quotes by Categories</h3>
<%= form_tag(search_path, method: :get) do %>
  <div class="form-group" style="padding-bottom: 10px;">
    <%= text_field_tag :quotes_query, params[:quotes_query], placeholder: 'Enter an category', class: "form-control" %>
  </div>
  <%= submit_tag 'Search Categories', class: "btn btn-primary" %>
<% end %>



