<div class="bg-green-500 text-white p-4">
  <%= notice %>
</div>

<h1 class="text-3xl font-bold mt-4">Manage Users</h1>

<div id="users" class="mt-4">
  <% @users.each do |user| %>
    <div class="bg-white rounded shadow p-4 mb-4">
      <%= render user %>
      <p>
        <%= link_to "Show this user", user, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 mt-4 inline-block" %>
